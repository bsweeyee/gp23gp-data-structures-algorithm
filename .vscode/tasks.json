{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [                
                "-std=c++17",
                "-g",
                "lib/glad/src/glad.c",   
                "src/Engine/gfx/\\*.cpp",
                "src/Engine/scene/\\*.cpp",
                "src/Engine/\\*.cpp",                                                
                "src/\\*.cpp",
                "-I${workspaceFolder}/include/",
                "-I${workspaceFolder}/lib/glad/include/",
                "-I${workspaceFolder}/lib/GLFW/include/",
                "-I${workspaceFolder}/lib/glm",
                "-I${workspaceFolder}/lib/glm/gtc",
                "-I${workspaceFolder}/src/Engine/gfx",
                "-I${workspaceFolder}/src/Engine/scene",
                "-I${workspaceFolder}/src/Engine/math",
                "-I${workspaceFolder}/src/Engine",
                "-L${workspaceFolder}/lib/",                
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "c++ run",
            "command":"${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
            "dependsOn":["g++ build active file"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }            
        }
    ],
    "version": "2.0.0"
}